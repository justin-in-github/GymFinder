<% layout("layouts/boilerplate")%>

    <!-- //add clusterMap -->
    <div id="cluster-map"></div>

    <h1>All Gyms</h1>
    <% for (let gym of gyms){%>
        <div class="card mb-3" id="card-index">
            <div class="row">
                <div class="col-md-4">
                    <!-- //if there is an img uploaded, display the first one in the index page, otherwise display a default one -->
                    <% if (gym.images.length) { %>
                        <img class="img-fluid" alt="" src="<%=gym.images[0].url%>">
                        <% } else { %>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/dusszlqnj/image/upload/v1611005513/GymFinder/samuel-girven-VJ2s0c20qCo-unsplash_sujjob.jpg">
                            <% } %>

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h1 class="card-title">
                            <%= gym.title %>
                        </h1>
                        <p class="card-text">
                            <%= gym.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= gym.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/gymfinder/gyms/<%=gym._id%>">View <%=gym.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
            <script>
                const mapToken = "<%- process.env.MAPBOX_TOKEN %>"
                const gyms = { features: <%-  JSON.stringify(gyms) %>}
            </script>
            <script src="/javascripts/clusterMap.js"></script>